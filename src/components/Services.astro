---
import { Icon } from 'astro-icon/components';

interface Project {
  id: number;
  type: 'vertical' | 'horizontal';
  image?: string;
  title: string;
}

const projects: Project[] = [
  { id: 1, type: 'horizontal', title: 'E-commerce Platform' },
  { id: 2, type: 'vertical', title: 'Mobile Banking App' },
  { id: 3, type: 'vertical', title: 'Fitness Tracker' },
  { id: 4, type: 'horizontal', title: 'SaaS Dashboard' },
  { id: 5, type: 'vertical', title: 'Social Network' },
  { id: 6, type: 'horizontal', title: 'Corporate Website' },
  { id: 7, type: 'vertical', title: 'Food Delivery App' },
  { id: 8, type: 'horizontal', title: 'Real Estate Portal' },
  { id: 9, type: 'vertical', title: 'Educational Platform' },
  { id: 10, type: 'horizontal', title: 'Travel Booking' },
  { id: 11, type: 'vertical', title: 'Meditation App' },
  { id: 12, type: 'horizontal', title: 'CRM System' },
  { id: 13, type: 'horizontal', title: 'News Aggregator' },
  { id: 14, type: 'vertical', title: 'Ride Sharing' },
  { id: 15, type: 'horizontal', title: 'Portfolio Site' },
  { id: 16, type: 'vertical', title: 'Task Manager' },
  { id: 17, type: 'horizontal', title: 'Streaming Service' },
  { id: 18, type: 'vertical', title: 'Health Monitor' },
  { id: 19, type: 'horizontal', title: 'Analytics Tool' },
  { id: 20, type: 'vertical', title: 'Chat Application' },
];
---

<section class="py-24 bg-slate-950 relative" id="servicios">
  <!-- Decorative background elements -->
  <div class="absolute top-0 left-0 w-full h-full overflow-hidden pointer-events-none">
      <div class="absolute top-[-10%] left-[-10%] w-[40%] h-[40%] bg-cyan-900/10 rounded-full blur-[100px]"></div>
  </div>

  <div class="relative z-10 w-full">
    <div class="container mx-auto px-4 md:px-6 mb-12">
      <div class="text-center max-w-3xl mx-auto">
        <h2 class="text-4xl md:text-5xl font-normal font-display text-white mb-6 tracking-tight">
          Nuestros <span class="text-transparent bg-clip-text bg-gradient-to-r from-cyan-200 to-indigo-200">Proyectos</span>
        </h2>
        <p class="text-lg text-slate-400">
          Una colección de experiencias digitales diseñadas para impactar y escalar.
        </p>
      </div>
    </div>

    <!-- Masonry Grid Wrapper with Height Constraint -->
    <div class="w-full h-[75vh] overflow-hidden relative">
        
        <!-- Masonry Grid -->
        <div class="columns-2 md:columns-4 lg:columns-5 gap-2 space-y-2 px-2">
          {projects.map((project) => (
            <div class="break-inside-avoid group relative rounded-2xl overflow-hidden border border-white/5 bg-white/5 backdrop-blur-sm transition-all duration-500 hover:border-cyan-500/30 hover:z-10">
              
              <!-- Aspect Ratio Container -->
              <div class={`relative w-full ${project.type === 'vertical' ? 'aspect-[9/16]' : 'aspect-video'} bg-slate-900/50 flex flex-col items-center justify-center p-4 text-center`}>
                
                {project.image ? (
                  <img src={project.image} alt={project.title} class="absolute inset-0 w-full h-full object-cover transition-transform duration-700 group-hover:scale-110" />
                ) : (
                    <div class="flex flex-col items-center justify-center gap-3 group-hover:scale-105 transition-transform duration-500">
                        <div class="w-12 h-12 rounded-xl bg-white/5 border border-white/10 flex items-center justify-center shadow-inner">
                            <Icon name={project.type === 'vertical' ? 'lucide:smartphone' : 'lucide:monitor'} class="text-cyan-200/40 group-hover:text-cyan-200 transition-colors" size={24} />
                        </div>
                        <div class="flex flex-col gap-0.5">
                             <span class="text-white font-display font-medium text-sm leading-tight">{project.title}</span>
                             <span class="text-[10px] font-bold uppercase tracking-widest text-slate-500 group-hover:text-cyan-400 transition-colors">Próximamente</span>
                        </div>
                    </div>
                )}
                
                <!-- Hover Overlay -->
                <div class="absolute inset-0 bg-gradient-to-t from-slate-950 via-slate-950/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500 flex flex-col justify-end p-4">
                     <div class="transform translate-y-4 group-hover:translate-y-0 transition-transform duration-500">
                         <span class="inline-block px-2 py-0.5 rounded-full bg-cyan-500/20 text-cyan-200 text-[10px] font-bold uppercase tracking-wider mb-1 border border-cyan-500/20 backdrop-blur-md">
                             {project.type === 'horizontal' ? 'Web' : 'App'}
                         </span>
                     </div>
                </div>

              </div>

            </div>
          ))}
        </div>
        
        <!-- Fade Out Overlay -->
        <div class="absolute bottom-0 left-0 w-full h-32 bg-gradient-to-t from-slate-950 via-slate-950/90 to-transparent z-20 pointer-events-none"></div>
    </div>
  </div>
</section>
