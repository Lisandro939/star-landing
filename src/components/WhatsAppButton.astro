---
// Configura tu número de WhatsApp y link de Instagram aquí
const whatsappNumber = "5492615990250";
const message =
  "¡Hola! Me gustaría obtener más información sobre sus servicios.";
const whatsappUrl = `https://wa.me/${whatsappNumber}?text=${encodeURIComponent(message)}`;
const instagramUrl = "https://www.instagram.com/yzen.software/";
---

<div class="floating-social-container">
  <a
    href={instagramUrl}
    target="_blank"
    rel="noopener noreferrer"
    class="instagram-button relative"
    aria-label="Seguir en Instagram"
  >
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="28"
      height="28"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
      class="lucide lucide-instagram"
    >
      <rect width="20" height="20" x="2" y="2" rx="5" ry="5"></rect>
      <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
      <line x1="17.5" x2="17.51" y1="6.5" y2="6.5"></line>
    </svg>
    <span class="tooltip">¡Seguinos en Instagram!</span>
  </a>

  <a
    href={whatsappUrl}
    target="_blank"
    rel="noopener noreferrer"
    class="whatsapp-button relative"
    aria-label="Contactar por WhatsApp"
  >
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="28"
      height="28"
      viewBox="0 0 24 24"
      fill="currentColor"
    >
      <path
        d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"
      ></path>
    </svg>
    <span class="tooltip">¡Chateá con nosotros!</span>
  </a>
</div>

<style>
  .floating-social-container {
    position: fixed;
    bottom: 24px;
    right: 24px;
    z-index: 1000;
    display: flex;
    gap: 16px;
    align-items: center;
  }

  .whatsapp-button,
  .instagram-button {
    display: flex;
    align-items: center;
    justify-content: center;

    width: 60px;
    height: 60px;
    border-radius: 50%;
    color: white;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .whatsapp-button {
    background: linear-gradient(135deg, #25d366 0%, #128c7e 100%);
    box-shadow:
      0 4px 20px rgba(37, 211, 102, 0.4),
      0 0 0 0 rgba(37, 211, 102, 0.4);
  }

  .instagram-button {
    background: linear-gradient(135deg, #833ab4, #fd1d1d, #fcb045);
    box-shadow:
      0 4px 20px rgba(253, 29, 29, 0.4),
      0 0 0 0 rgba(253, 29, 29, 0.4);
  }

  .whatsapp-button:hover {
    transform: scale(1.1);
    box-shadow:
      0 6px 30px rgba(37, 211, 102, 0.5),
      0 0 0 0 rgba(37, 211, 102, 0);
  }

  .instagram-button:hover {
    transform: scale(1.1);
    box-shadow:
      0 6px 30px rgba(253, 29, 29, 0.5),
      0 0 0 0 rgba(253, 29, 29, 0);
  }

  .whatsapp-button:active,
  .instagram-button:active {
    transform: scale(0.95);
  }

  .tooltip {
    position: absolute;
    bottom: 70px;
    left: 50%;

    padding: 8px 16px;
    border-radius: 8px;

    background: rgba(15, 23, 42, 0.95);
    border: 1px solid rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);

    color: white;
    font-size: 14px;
    font-weight: 500;
    white-space: nowrap;

    opacity: 0;
    visibility: hidden;
    transform: translateX(-50%) translateY(10px);
    transition: all 0.3s ease;

    pointer-events: none;
  }

  .tooltip::after {
    content: "";
    position: absolute;
    bottom: -6px;
    left: 50%;
    transform: translateX(-50%);

    border-width: 6px;
    border-style: solid;
    border-color: rgba(15, 23, 42, 0.95) transparent transparent transparent;
  }

  .whatsapp-button:hover .tooltip,
  .instagram-button:hover .tooltip {
    opacity: 1;
    visibility: visible;
    transform: translateX(-50%) translateY(0);
  }

  /* Responsive adjustments */
  @media (max-width: 640px) {
    .floating-social-container {
      bottom: 16px;
      right: 16px;
      gap: 12px;
    }

    .whatsapp-button,
    .instagram-button {
      width: 56px;
      height: 56px;
    }

    .tooltip {
      display: none;
    }
  }
</style>
