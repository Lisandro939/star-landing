---
import { Icon } from "astro-icon/components";
---

<section class="py-24 relative overflow-hidden" id="contacto">
  <!-- Background glow for this section -->
  <div class="absolute inset-0 z-0 pointer-events-none">
    <div
      class="absolute bottom-0 right-0 w-[600px] h-[600px] bg-cyan-600/5 blur-[100px] rounded-full"
    >
    </div>
  </div>

  <div class="container mx-auto px-6 relative z-10">
    <div
      class="max-w-7xl mx-auto rounded-[2rem] border border-white/5 bg-slate-900/50 backdrop-blur-3xl overflow-hidden shadow-2xl shadow-black/50"
    >
      <div class="grid lg:grid-cols-2">
        <!-- Info Side -->
        <div class="p-10 md:p-14 bg-slate-900/40 relative overflow-hidden">
          <h2
            class="text-3xl md:text-4xl font-bold text-white mb-6 font-display leading-tight"
          >
            ¿Listo para dar el <span class="text-cyan-200">gran salto</span>?
          </h2>
          <p class="text-slate-400 text-lg mb-10 leading-relaxed">
            Estamos buscando el próximo gran desafío. Cuéntanos sobre tu visión
            y nosotros pondremos la ingeniería para hacerla realidad.
          </p>

          <!-- Redes Sociales -->
          <div class="mt-12">
            <p
              class="text-xs font-medium text-slate-500 uppercase tracking-widest mb-4"
            >
              Síguenos en redes
            </p>
            <div class="flex gap-4">
              <a
                href="https://www.instagram.com/yzen.software/"
                target="_blank"
                rel="noopener noreferrer"
                class="group w-12 h-12 rounded-xl bg-gradient-to-br from-purple-500/20 to-pink-500/20 border border-white/10 flex items-center justify-center text-pink-400 hover:from-purple-500/30 hover:to-pink-500/30 hover:border-pink-400/30 hover:text-pink-300 hover:scale-110 transition-all duration-300"
                aria-label="Instagram"
              >
                <Icon name="lucide:instagram" size={22} />
              </a>
              <a
                href="https://wa.me/5492615990250?text=¡Hola! Me gustaría obtener más información sobre sus servicios."
                target="_blank"
                rel="noopener noreferrer"
                class="group w-12 h-12 rounded-xl bg-gradient-to-br from-green-500/20 to-emerald-500/20 border border-white/10 flex items-center justify-center text-green-400 hover:from-green-500/30 hover:to-emerald-500/30 hover:border-green-400/30 hover:text-green-300 hover:scale-110 transition-all duration-300"
                aria-label="WhatsApp"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="currentColor"
                >
                  <path
                    d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"
                  ></path>
                </svg>
              </a>
            </div>
          </div>
        </div>

        <!-- Form Side -->
        <div class="p-10 md:p-14 bg-slate-950/30">
          <form class="space-y-6" id="contactForm">
            <div class="grid md:grid-cols-2 gap-6">
              <div class="space-y-2">
                <label
                  class="text-xs font-medium text-slate-400 uppercase tracking-wider ml-1"
                  for="contact-name">Nombre</label
                >
                <input
                  type="text"
                  id="contact-name"
                  name="name"
                  class="w-full px-4 py-3 rounded-lg bg-white/5 border border-white/10 text-white focus:outline-none focus:border-cyan-200/50 transition-all placeholder:text-slate-600"
                  placeholder="Tu Nombre"
                  required
                />
              </div>
              <div class="space-y-2">
                <label
                  class="text-xs font-medium text-slate-400 uppercase tracking-wider ml-1"
                  for="contact-company">Compañía</label
                >
                <input
                  type="text"
                  id="contact-company"
                  name="company"
                  class="w-full px-4 py-3 rounded-lg bg-white/5 border border-white/10 text-white focus:outline-none focus:border-cyan-200/50 transition-all placeholder:text-slate-600"
                  placeholder="Tu Empresa"
                />
              </div>
            </div>

            <div class="space-y-2">
              <label
                class="text-xs font-medium text-slate-400 uppercase tracking-wider ml-1"
                for="contact-email">Email</label
              >
              <input
                type="email"
                id="contact-email"
                name="email"
                class="w-full px-4 py-3 rounded-lg bg-white/5 border border-white/10 text-white focus:outline-none focus:border-cyan-200/50 transition-all placeholder:text-slate-600"
                placeholder="correo@ejemplo.com"
                required
              />
            </div>

            <div class="space-y-2">
              <label
                class="text-xs font-medium text-slate-400 uppercase tracking-wider ml-1"
                for="contact-message">Mensaje</label
              >
              <textarea
                rows="4"
                id="contact-message"
                name="message"
                class="w-full px-4 py-3 rounded-lg bg-white/5 border border-white/10 text-white focus:outline-none focus:border-cyan-200/50 transition-all resize-none placeholder:text-slate-600"
                placeholder="¿Cómo podemos ayudarte?"
                required></textarea>
            </div>

            <!-- Mensaje de estado -->
            <div id="form-status" class="hidden">
              <div
                id="form-success"
                class="hidden p-4 rounded-lg bg-green-500/20 border border-green-500/30 text-green-300"
              >
                <p class="flex items-center gap-2">
                  <svg
                    class="w-5 h-5"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M5 13l4 4L19 7"></path>
                  </svg>
                  ¡Mensaje enviado! Nos pondremos en contacto pronto.
                </p>
              </div>
              <div
                id="form-error"
                class="hidden p-4 rounded-lg bg-red-500/20 border border-red-500/30 text-red-300"
              >
                <p class="flex items-center gap-2">
                  <svg
                    class="w-5 h-5"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M6 18L18 6M6 6l12 12"></path>
                  </svg>
                  <span id="error-message"
                    >Error al enviar el mensaje. Por favor, intenta nuevamente.</span
                  >
                </p>
              </div>
            </div>

            <button
              type="submit"
              id="submit-btn"
              class="cursor-pointer w-full py-4 rounded-full bg-cyan-200 text-slate-950 font-bold text-lg hover:bg-cyan-100 transition-all flex items-center justify-center gap-3 disabled:opacity-50 disabled:cursor-not-allowed"
            >
              <span id="btn-text">Enviar propuesta</span>
              <span id="btn-loading" class="hidden">
                <svg
                  class="animate-spin h-5 w-5"
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                >
                  <circle
                    class="opacity-25"
                    cx="12"
                    cy="12"
                    r="10"
                    stroke="currentColor"
                    stroke-width="4"></circle>
                  <path
                    class="opacity-75"
                    fill="currentColor"
                    d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
                  ></path>
                </svg>
              </span>
              <Icon name="lucide:arrow-right" size={18} id="btn-arrow" />
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  const form = document.getElementById("contactForm") as HTMLFormElement;
  const submitBtn = document.getElementById("submit-btn") as HTMLButtonElement;
  const btnText = document.getElementById("btn-text") as HTMLSpanElement;
  const btnLoading = document.getElementById("btn-loading") as HTMLSpanElement;
  const btnArrow = document.getElementById("btn-arrow") as HTMLElement;
  const formStatus = document.getElementById("form-status") as HTMLDivElement;
  const formSuccess = document.getElementById("form-success") as HTMLDivElement;
  const formError = document.getElementById("form-error") as HTMLDivElement;
  const errorMessage = document.getElementById(
    "error-message",
  ) as HTMLSpanElement;

  function setLoading(loading: boolean) {
    submitBtn.disabled = loading;
    btnText.textContent = loading ? "Enviando..." : "Enviar propuesta";
    btnLoading.classList.toggle("hidden", !loading);
    btnArrow.classList.toggle("hidden", loading);
  }

  function showStatus(type: "success" | "error", message?: string) {
    formStatus.classList.remove("hidden");
    formSuccess.classList.toggle("hidden", type !== "success");
    formError.classList.toggle("hidden", type !== "error");
    if (message && type === "error") {
      errorMessage.textContent = message;
    }

    // Auto-hide after 5 seconds
    setTimeout(() => {
      formStatus.classList.add("hidden");
    }, 5000);
  }

  form?.addEventListener("submit", async (e) => {
    e.preventDefault();

    // Ocultar mensajes previos
    formStatus.classList.add("hidden");

    // Obtener datos del formulario
    const formData = new FormData(form);
    const data = {
      name: formData.get("name"),
      company: formData.get("company"),
      email: formData.get("email"),
      message: formData.get("message"),
    };

    setLoading(true);

    try {
      const response = await fetch("/api/contact", {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify(data),
      });

      const result = await response.json();

      if (result.success) {
        showStatus("success");
        form.reset();
      } else {
        showStatus("error", result.error);
      }
    } catch (error) {
      console.error("Error:", error);
      showStatus("error", "Error de conexión. Por favor, intenta nuevamente.");
    } finally {
      setLoading(false);
    }
  });
</script>
