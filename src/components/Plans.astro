---
import { Icon } from "astro-icon/components";

interface Plan {
    name: string;
    price: string;
    isFrom?: boolean;
    period?: string;
    description: string;
    features: string[];
    ctaText: string;
    ctaHref: string;
    isPopular?: boolean;
    isPrimary?: boolean;
    isPersonalized?: boolean;
}

const plans: Plan[] = [
    {
        name: "PÁGINA WEB",
        isFrom: false,
        price: "$99.999",
        period: "ARS",
        description: "Ideal para emprendedores y startups",
        features: [
            "Diseño moderno y adaptable",
            "Secciones personalizadas",
            "Formulario de contacto",
            "Optimización SEO avanzada",
            "Entrega en 48 horas",
        ],
        ctaText: "Comenzar",
        ctaHref: "#contacto",
        isPopular: true,
        isPrimary: true,
        isPersonalized: false,
    },
    {
        name: "SISTEMA DE GESTIÓN",
        isFrom: true,
        price: "$399.999",
        period: "ARS",
        description: "Para negocios en crecimiento",
        features: [
            "Gestión de inventario completa",
            "Panel de administración avanzado",
            "Reportes y analíticas en tiempo real",
            "Múltiples usuarios y roles",
            "Control de clientes y proveedores",
            "Backups automáticos en la nube",
            "Entrega en 15 dias hábiles",
        ],
        ctaText: "Comenzar",
        ctaHref: "#contacto",
        isPopular: false,
        isPrimary: false,
        isPersonalized: false,
    },
    {
        name: "APP MÓVIL",
        isFrom: true,
        price: "$599.999",
        period: "ARS",
        description: "Llevá tu negocio al bolsillo de tus clientes",
        features: [
            "Desarrollo iOS y Android",
            "Diseño UI/UX personalizado",
            "Notificaciones push",
            "Integración con APIs",
            "Publicación en tiendas",
            "Mantenimiento incluido 30 días",
        ],
        ctaText: "Comenzar",
        ctaHref: "#contacto",
        isPopular: false,
        isPrimary: false,
        isPersonalized: false,
    },
    {
        name: "SISTEMA PERSONALIZADO",
        isFrom: false,
        price: "",
        description: "Nos adaptamos a tu necesidad",
        features: [
            "E-commerce",
            "Turneros y reservas automatizadas",
            "Plataformas educativas",
            "Generadores de documentos",
            "Cotizadores automáticos",
            "Portales de autogestión de clientes",
        ],
        ctaText: "Quiero un presupuesto",
        ctaHref: "#contacto",
        isPopular: false,
        isPrimary: false,
        isPersonalized: true,
    },
];
---

<section class="py-24 bg-slate-950 relative" id="planes">
    <!-- Decorative background elements -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
        <div
            class="absolute top-[20%] right-[-5%] w-[35%] h-[50%] bg-cyan-900/10 rounded-full blur-[120px]"
        >
        </div>
        <div
            class="absolute bottom-[10%] left-[-10%] w-[30%] h-[40%] bg-indigo-900/10 rounded-full blur-[100px]"
        >
        </div>
    </div>

    <div class="container mx-auto px-6 relative z-10">
        <div class="max-w-7xl mx-auto">
            <!-- Header -->
            <div class="text-center max-w-3xl mx-auto mb-16">
                <h2
                    class="text-4xl md:text-5xl font-normal font-display text-white mb-6 tracking-tight"
                >
                    Planes que <span
                        class="text-transparent bg-clip-text bg-gradient-to-r from-cyan-200 to-indigo-200"
                        >escalan contigo</span
                    >
                </h2>
                <p class="text-lg text-slate-400">
                    Elige el plan perfecto para tu negocio. Sin costos ocultos.
                </p>
            </div>

            <!-- Plans Grid -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
                {
                    plans.map((plan) => (
                        <div
                            class={`relative group rounded-2xl transition-all duration-500`}
                        >
                            {/* Popular Badge */}
                            {plan.isPopular && (
                                <div class="absolute -top-4 left-1/2 -translate-x-1/2 z-20">
                                    <div class="px-4 py-1.5 rounded-full bg-cyan-500 text-white text-xs font-bold uppercase tracking-wider shadow-lg shadow-cyan-500/30">
                                        Más popular
                                    </div>
                                </div>
                            )}

                            {/* Card */}
                            <div
                                class={`h-full p-8 rounded-2xl border backdrop-blur-sm transition-all duration-500 flex flex-col ${
                                    plan.isPrimary
                                        ? "bg-slate-900/80 border-cyan-500/30 shadow-xl shadow-cyan-500/5"
                                        : "bg-slate-900/40 border-white/5 hover:border-white/10"
                                }`}
                            >
                                {/* Plan Header */}
                                <div class="text-center mb-8">
                                    <h3
                                        class={` font-display font-medium mb-4 ${plan.isPersonalized ? "text-3xl" : "text-xl"}`}
                                    >
                                        {plan.name}
                                    </h3>
                                    <div class="flex items-baseline justify-center gap-1">
                                        {plan.isFrom && (
                                            <span class="text-white text-lg">
                                                Desde
                                            </span>
                                        )}
                                        <span class="text-4xl font-display font-bold text-white">
                                            {plan.price}
                                        </span>
                                        {plan.period && (
                                            <span class="text-slate-500 text-sm">
                                                /{plan.period}
                                            </span>
                                        )}
                                    </div>
                                    <p class="text-slate-400 text-sm mt-3">
                                        {plan.description}
                                    </p>
                                </div>

                                {/* Features List */}
                                <ul class="space-y-4 mb-8 flex-grow">
                                    {plan.features.map((feature) => (
                                        <li class="flex items-start gap-3">
                                            <div class="mt-0.5 flex-shrink-0">
                                                <Icon
                                                    name="lucide:check"
                                                    class="text-cyan-400"
                                                    size={18}
                                                />
                                            </div>
                                            <span class="text-slate-300 text-sm">
                                                {feature}
                                            </span>
                                        </li>
                                    ))}
                                </ul>

                                {/* CTA Button */}
                                <a
                                    href={plan.ctaHref}
                                    class={`w-full py-3.5 px-6 rounded-full text-center font-medium text-sm transition-all duration-300 flex items-center justify-center gap-2 ${
                                        plan.isPrimary
                                            ? "bg-cyan-500 text-white hover:bg-cyan-400 shadow-lg"
                                            : "bg-white/5 text-white border border-white/10 hover:bg-white/10 hover:border-white/20"
                                    }`}
                                >
                                    {plan.ctaText}
                                </a>
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>
    </div>
</section>
