---
import "../styles/global.css";

interface Props {
	title?: string;
	description?: string;
}

const {
	title = "Yzen Software",
	description = "Desarrollamos soluciones tecnológicas innovadoras y modernas para impulsar tu negocio al siguiente nivel.",
} = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />

		<!-- SEO Meta Tags -->
		<title>{title}</title>
		<meta name="description" content={description} />
		<meta
			name="keywords"
			content="desarrollo software, soluciones tecnológicas, software empresarial, desarrollo web, aplicaciones móviles"
		/>

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />

		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:title" content={title} />
		<meta property="twitter:description" content={description} />
	</head>
	<body>
		<slot />
	</body>
</html>
